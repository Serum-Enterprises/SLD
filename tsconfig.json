{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"outDir": "./build",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": false,
		"lib": [
			"ESNext"
		],
		"declaration": true,
		"declarationDir": "./types",
		"declarationMap": false,
		"rootDir": ".",
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}