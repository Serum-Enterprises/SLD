{
	"compilerOptions": {
		"allowJs": false,
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "./build",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": false,
		"lib": [
			"ESNext"
		],
		"rootDir": ".",
	},
	"include": [
		"ts/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}