{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"outDir": "./build",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": false,
		"lib": [
			"ESNext"
		]
	},
	"include": [
		"src/**/*",
		"lib/**/*",
		"demo/**/*",
		"test.js",
		"demo"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}